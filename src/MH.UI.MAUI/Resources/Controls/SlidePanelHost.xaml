<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:c="clr-namespace:MH.UI.MAUI.Controls;assembly=MH.UI.MAUI">

  <Style TargetType="c:SlidePanelHost">
    <Setter Property="ControlTemplate">
      <Setter.Value>
        <ControlTemplate>
          <c:TemplatedContentView BindingContext="{Binding ViewModel.Content, Source={RelativeSource TemplatedParent}}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>